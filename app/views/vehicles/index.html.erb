      <% @vehicles.each do |vehicle| %>
        <tr>
          <%if can? :show, Vehicle %>
            <td><%=link_to vehicle.id, vehicle, :class => 'button'%></td>
          <%else%>
            <td><%= label vehicle.id, vehicle.id, :class => 'button'%></td>
          <%end%>


          <% @model = vehicle %> 

          <td><%= vehicle.brand %></td>

          <td><%= vehicle.vehicle_year %></td>

          <td><%= vehicle.plate %></td>

          <td><%= vehicle.model %></td>

          <td><%= vehicle.color %></td>

          <%= render "layouts/index_links" %>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= render "layouts/action_links" %>
